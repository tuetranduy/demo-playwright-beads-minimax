{
  "name": "playwright-automation-framework",
  "version": "1.0.0",
  "description": "Production-ready Playwright automation framework with Allure reporting",
  "main": "dist/index.js",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:ci": "playwright test --reporter=line",
    "report:allure": "allure generate allure-results --clean -o allure-report",
    "report:allure:serve": "allure open allure-report",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "clean": "rimraf allure-results allure-report test-results dist"
  },
  "dependencies": {
    "@faker-js/faker": "^8.3.1",
    "@playwright/test": "^1.40.0",
    "allure-commandline": "^2.29.0",
    "allure-playwright": "^3.0.4",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "eslint": "^8.55.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
